doctype html
html
  head
    title= title
  body
    h1= title

    a(href='/update-cobj') Add to this table

    if records.length
      table(border='1' cellpadding='8')
        thead
          tr
            th Name
            th Bio
            th Weapon
        tbody
          each record in records
            tr
              td= record.properties.name
              td= record.properties.bio
              td= record.properties.weapon
    else
      p No records found.
